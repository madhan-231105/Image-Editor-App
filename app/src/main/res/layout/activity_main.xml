<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Top Toolbar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#121212"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Photo Editor"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF5252"
            android:minHeight="40dp"
            android:text="Reset"
            android:textColor="#FFF"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Image Preview Area -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/controlsContainer"
        android:layout_below="@id/topBar"
        android:layout_margin="20dp"
        android:contentDescription="Image Preview"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_menu_gallery" />

    <!-- Controls Container -->
    <LinearLayout
        android:id="@+id/controlsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#1E1E1E"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <!-- Dynamic Sub-Options (Chips) -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/subOptionsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp" />
        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333" />

        <!-- Main Categories -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:weightSum="4">

            <!-- Feature 1: Crop -->
            <Button
                android:id="@+id/btnCatCrop"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Crop"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <!-- Feature 6: Filter -->
            <Button
                android:id="@+id/btnCatFilter"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Filter"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <!-- Feature 3: Resize -->
            <Button
                android:id="@+id/btnCatResize"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Resize"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <!-- Feature 4: Mask -->
            <Button
                android:id="@+id/btnCatMask"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mask"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Pick Image Button -->
        <Button
            android:id="@+id/btnPick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#8AB4F8"
            android:text="Select New Image"
            android:textColor="#000" />
    </LinearLayout>

</RelativeLayout>